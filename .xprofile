#!/bin/sh

# Composite manager
xcompmgr -c &
hsetroot -solid "#222e45"

# Notification server
dunst &

# Wallpaper
(ping -c 1 -W 0.1 google.com; while [[ $? -ne 0 ]]; do ping -c 1 -W 0.1 google.com; done; feh --bg-fill "https://unsplash.it/1920/1080/?landscape") &

# Status bar
clockemoji &
meteo &
statusbar &
sudo checkyayupdates &

# System tray
birdtray &
#discord-ptb --start-minimized &
#skypeforlinux &

# Google Drive
google-drive-ocamlfuse /home/juan/'Google Drive'/ &

exec dwm

